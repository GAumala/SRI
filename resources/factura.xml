<?xml version="1.0" encoding="UTF-8"?>
<factura id="comprobante" version="1.0.0">
  <infoTributaria>
    <ambiente>{{ambiente}}</ambiente>
      <tipoEmision>1</tipoEmision>
      <razonSocial>{{razon-social}}</razonSocial>
      <ruc>{{ruc}}</ruc>
      <claveAcceso>{{clave-acceso}}</claveAcceso>
      <codDoc>01</codDoc>
      <estab>{{establecimiento.codigo}}</estab>
      <ptoEmi>{{punto-emision}}</ptoEmi>
      <secuencial>{{secuencial}}</secuencial>
      <dirMatriz>{{matriz}}</dirMatriz>
  </infoTributaria>
  <infoFactura>
    <fechaEmision>{{fecha}}</fechaEmision>
    <dirEstablecimiento>{{establecimiento.dir}}</dirEstablecimiento>
    <tipoIdentificacionComprador>{{cliente.tipo}}</tipoIdentificacionComprador>
    <razonSocialComprador>{{cliente.razon-social}}</razonSocialComprador>
    <identificacionComprador>{{cliente.id}}</identificacionComprador>
    <direccionComprador>{{cliente.dir}}</direccionComprador>
    <totalSinImpuestos>{{subtotal}}</totalSinImpuestos>
    <totalDescuento>0.00</totalDescuento>
    <totalConImpuestos>
      <totalImpuesto>
        <codigo>2</codigo>
        <codigoPorcentaje>4</codigoPorcentaje>
        <descuentoAdicional>0.00</descuentoAdicional>
        <baseImponible>{{subtotal}}</baseImponible>
        <valor>{{iva}}</valor>
      </totalImpuesto>
    </totalConImpuestos>
    <propina>0.00</propina>
    <importeTotal>{{total}}</importeTotal>
    <moneda>DOLAR</moneda>
  </infoFactura>
    <detalles>
    {% for item in cart %}
      <detalle>
        <codigoPrincipal>{{item.codigo}}</codigoPrincipal>
        <descripcion>{{item.descripcion}}</descripcion>
        <cantidad>{{item.cantidad}}</cantidad>
        <precioUnitario>{{item.precio}}</precioUnitario>
        <descuento>0.00</descuento>
        <precioTotalSinImpuesto>{{item.importe}}</precioTotalSinImpuesto>
        <impuestos>
          <impuesto>
            <codigo>2</codigo>
            <codigoPorcentaje>4</codigoPorcentaje>
            <tarifa>15</tarifa>
            <baseImponible>{{item.importe}}</baseImponible>
            <valor>{{item.iva}}</valor>
          </impuesto>
        </impuestos>
      </detalle>
    {% endfor %}
    </detalles>
</factura>
